<!-- extended javascript -->
<!DOCTYPE html>
<html>
    <head>
        <title>Participantes</title>
    </head>
<body>
    <script type="text/javascript" src="/../js/jquery-1.10.2.min.js"></script>
        <link rel="stylesheet" href="/../css/style.css">

<div class="data-table">
    <table border="1" cellpadding="7" cellspacing="7">   
        <h2>Participantes</h2>
        
        <tr>
            <th>Lista de Presen√ßa</th>
        </tr>
            <% if(data[0].length){ 
                        
                for(var i = 0;i < data.length;i++) { 
    
                    if(data[0][i].validade_encontro) { %>
            
                        <tr>
                            <td><%=data[0][i].nome%></td>
                            <td>
                                <a class="a-inside delete" href="javascript:void(0)" onClick="deletePart(<%=data[0][i].id_encontro%>)">Delete</a>
                                   
                            </td>
                        </tr>  

                    <% }}
    
                    }else{ %>
                        <tr>
                            <td colspan="5">No Data</td>
                        </tr>
                    <% } %>
    </table>
</div>

<div class="page-data">
    
        <form method="post" action="" id="the-form">
            <table cellpadding="11">
            <tr>
                <td class="label">Adicionar participante</td><td>: 
                    <select id="select1" name="anfitriao">
                        <% for(var i=0; i < data[1].length; i++) { %>
                            <option><%= data[1][i].nome%></option>
                         <% } %>
                    </select></td>
    
            </tr>
             <tr>
                <td class="label"></td>
                <td>
                    &nbsp; <input type="button" value="Save" onClick="savePart()">
                </td>
             </tr>
            </table>
        </form>
    </div> 

    <script>

            function savePart(){
               
               $.ajax({
                
                url:"/api/filme",
                type:"post",
                data:$("#the-form").serialize(),
                success:function(res){
                    
                    window.location.reload();
                    return false;
                },
                error:function(xhr, status, error){
                    
                    console.log(xhr.responseText);
                    var err = '';
                    $.each(JSON.parse(xhr.responseText) , function(i, item) {
                       
                         err +='<li>'+item.msg+'</li>';
                    });
                    $(".err-area").html(err);    
                    return false;
                }
                
               });
            }
            
            function deletePart(id_filme){
            
                $.ajax({
                    url:"/api/filme/"+id_filme,
                    type: 'put',
                    success: function(res) {
                        
                        window.location.reload();
                        return false;
                    },
                    error:function(xhr, status, error){
                    
                        console.log(xhr.responseText);
                        alert("Error deleting");
                        return false;
                    }
                });
            }
        
        </script>

</body>
</html>
